{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ARB (Application Resource Bundle)",
  "description": "Flutter internationalization ARB file format",
  "type": "object",
  "properties": {
    "@@locale": {
      "type": "string",
      "description": "The locale identifier (e.g., 'en', 'es', 'fr')",
      "pattern": "^[a-z]{2,3}(-[A-Z]{2})?$"
    },
    "@@last_modified": {
      "type": "string",
      "description": "Last modification timestamp"
    },
    "@@author": {
      "type": "string",
      "description": "Author of the translations"
    }
  },
  "patternProperties": {
    "^[^@].*": {
      "type": "string",
      "description": "Translatable string value"
    },
    "^@.*": {
      "type": "object",
      "description": "Metadata for translatable strings",
      "properties": {
        "description": {
          "type": "string",
          "description": "Description of the translatable string"
        },
        "type": {
          "type": "string",
          "description": "Type of the placeholder (String, int, double, etc.)"
        },
        "placeholders": {
          "type": "object",
          "description": "Placeholder definitions",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["String", "int", "double", "num", "DateTime"]
                },
                "format": {
                  "type": "string"
                },
                "example": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true,
  "required": ["@@locale"]
}
