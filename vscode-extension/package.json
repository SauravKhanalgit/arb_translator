{
  "name": "arb-translator-gen-z",
  "displayName": "ARB Translator Gen Z",
  "description": "AI-powered ARB file translation with real-time validation and IntelliSense support",
  "version": "3.2.0",
  "publisher": "sauravkhanal",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "L10n",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "workspaceContains:**/*.arb",
    "onCommand:arbTranslator.translate",
    "onCommand:arbTranslator.validate",
    "onCommand:arbTranslator.analyze"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arbTranslator.translate",
        "title": "ARB: Translate File",
        "category": "ARB Translator"
      },
      {
        "command": "arbTranslator.validate",
        "title": "ARB: Validate File",
        "category": "ARB Translator"
      },
      {
        "command": "arbTranslator.analyze",
        "title": "ARB: Analyze Project",
        "category": "ARB Translator"
      },
      {
        "command": "arbTranslator.showDashboard",
        "title": "ARB: Show Analytics Dashboard",
        "category": "ARB Translator"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "arbTranslator.translate",
          "when": "resourceExtname == .arb",
          "group": "7_modification"
        },
        {
          "command": "arbTranslator.validate",
          "when": "resourceExtname == .arb",
          "group": "7_modification"
        }
      ],
      "editor/context": [
        {
          "command": "arbTranslator.translate",
          "when": "resourceExtname == .arb",
          "group": "7_modification"
        },
        {
          "command": "arbTranslator.validate",
          "when": "resourceExtname == .arb",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "arbTranslator.translate",
          "when": "resourceExtname == .arb"
        },
        {
          "command": "arbTranslator.validate",
          "when": "resourceExtname == .arb"
        },
        {
          "command": "arbTranslator.analyze"
        },
        {
          "command": "arbTranslator.showDashboard"
        }
      ]
    },
    "configuration": {
      "title": "ARB Translator Gen Z",
      "properties": {
        "arbTranslator.preferredProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["google", "openai", "deepl", "azure", "aws"],
          "enumDescriptions": [
            "Google Translate (free, fast)",
            "OpenAI GPT (premium quality)",
            "DeepL (high quality)",
            "Azure Translator (enterprise)",
            "AWS Translate (scalable)"
          ],
          "description": "Preferred AI translation provider"
        },
        "arbTranslator.targetLanguages": {
          "type": "array",
          "default": ["es", "fr", "de"],
          "items": {
            "type": "string"
          },
          "description": "Default target languages for translation"
        },
        "arbTranslator.enableRealTimeValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time ARB file validation"
        },
        "arbTranslator.enableIntelliSense": {
          "type": "boolean",
          "default": true,
          "description": "Enable ARB-specific IntelliSense features"
        },
        "arbTranslator.cliPath": {
          "type": "string",
          "default": "arb_translator",
          "description": "Path to ARB Translator CLI executable"
        }
      }
    },
    "languages": [
      {
        "id": "arb",
        "aliases": ["ARB", "arb"],
        "extensions": [".arb"],
        "configuration": "./language-configuration.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.arb",
        "url": "./arb-schema.json"
      }
    ],
    "snippets": [
      {
        "language": "arb",
        "path": "./snippets/arb.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sauravkhanalgit/arb_translator"
  },
  "bugs": {
    "url": "https://github.com/sauravkhanalgit/arb_translator/issues"
  },
  "homepage": "https://github.com/sauravkhanalgit/arb_translator#readme",
  "keywords": [
    "flutter",
    "i18n",
    "localization",
    "arb",
    "translation",
    "ai",
    "l10n"
  ],
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "icon": "assets/icon.png"
}
